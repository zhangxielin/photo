---
const { galleryData } = Astro.props;
---

<div class="gallery">
  {galleryData.map((item) => (
    <div class="gallery-item">
      <img src={item.imageUrl} alt={item.title} />
      <p>{item.description}</p>
      <p>{item.date}</p>
    </div>
  ))}
</div>

<style>
  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
  }
  .gallery-item img {
    width: 100%;
    height: auto;
    display: block;
  }
  .gallery-item p {
    text-align: center;
  }
</style>
