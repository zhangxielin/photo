---
export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  //children: any;
}

const {
  title = '中国风景摄影 | ChaChaPhoto - Travel Landscape Photography in China',
  description = 'ChaCha 的旅行与风景摄影作品集，记录中国的自然风光、城市街拍与文化影像。Explore stunning landscapes, street photography, and travel moments across China.',
  keywords = '摄影, 旅行, 风景, 中国风光, 城市街拍, Landscape Photography, Travel Photography, China, Street Photography, Nature, Culture',
  //children 
} = Astro.props;
---

<!doctype html>
<html lang="zh">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <link rel="stylesheet" href="/global.css" />
    <link rel="shortcut icon" href="/favicon.ico">
  
  </head>
 <!-- 页面内容 -->
  <body>
    <slot />
   <!-- Ko-fi Widget -->
<script src="https://storage.ko-fi.com/cdn/scripts/overlay-widget.js"></script>
<script is:inline>
  // 创建脚本标签动态加载 Ko-fi
  const kofiScript = document.createElement('script');
  kofiScript.src = 'https://storage.ko-fi.com/cdn/scripts/overlay-widget.js';
  kofiScript.onload = () => {
    if (typeof kofiWidgetOverlay !== 'undefined') {
      kofiWidgetOverlay.draw('chachaphoto', {
        'type': 'floating-chat',
        'floating-chat.donateButton.text': 'Support me',
        'floating-chat.donateButton.background-color': '#fcbf47',
        'floating-chat.donateButton.text-color': '#323842'
      });
    } else {
      console.error('Ko-fi widget loaded but kofiWidgetOverlay is undefined.');
    }
  };
  kofiScript.onerror = () => {
    console.error('Failed to load Ko-fi widget script.');
  };
  document.body.appendChild(kofiScript);
</script>

  </body>