---
import { getCollection } from 'astro:content';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Layout from '../../layouts/BaseLayout.astro';

export const frontmatter = {
  title: "青藏线",
  description: "2024年春季自驾旅行，记录西北的自然与人文。",
  cover: "https://photo.chachaphoto.uk/1017333399.jpg", // 放在 /public/covers 目录
  order: 1
};

const videos = [
  {
    title: "青藏线-第1集",
    description: "本期视频主要讲述拍摄计划和拍摄可能遇到的困难。",
    bilibiliUrl: "https://player.bilibili.com/player.html?isOutside=true&aid=113553415672310&bvid=BV1TDBDYxEbc&cid=25711480944&p=1&autoplay=0"
  },
  {
    title: "青藏线-第2集",
    description: "西宁到格尔木沿途有啥美景？",
    bilibiliUrl: "https://player.bilibili.com/player.html?isOutside=true&aid=113564824115103&bvid=BV19wzBYYENE&cid=25713122659&p=1&autoplay=0"
  },
  {
    title: "青藏线-第3集",
    description: "去拉萨的路上比到拉萨还棒",
    bilibiliUrl: "https://player.bilibili.com/player.html?isOutside=true&aid=113580645095746&bvid=BV1Tc6PYcEtT&cid=25716136445&p=1&autoplay=0"
  },
  {
    title: "青藏线-第4集",
    description: "沉浸逛寺庙：日喀则扎什伦布寺",
    bilibiliUrl: "https://player.bilibili.com/player.html?isOutside=true&aid=113586735159776&bvid=BV1NUzCYqEEi&cid=25718234700&p=1&autoplay=0"
  },
  {
    title: "青藏线-第5集",
    description: "沉浸逛寺庙：拉萨城北色拉寺",
    bilibiliUrl: "https://player.bilibili.com/player.html?isOutside=true&aid=113597657128478&bvid=BV1zai9Y7Eoa&cid=25721379666&p=1&autoplay=0"
  },
  {
    title: "青藏线-第6集",
    description: "谁是青藏铁路上最可爱的人",
    bilibiliUrl: "https://player.bilibili.com/player.html?isOutside=true&aid=113603831206451&bvid=BV1JEieYxExC&cid=25723082017&p=1&autoplay=0"
  },
  // 继续添加更多视频项...
];
---



<Layout>1</Layout>
<body>
    <Header />
    <main class="container">
        <a href="/video" class="back-button">← 返回专辑列表</a>
        <h2>📺青藏线</h2>
        <p>坐上火车去拉萨，我跟随Thomas的脚步，从青海乘坐火车到拉萨，为了获得更长的可拍摄时间，我在格尔木休息了一晚。全程基本上是硬座。这一段旅程我主要是做青藏线沿途河流的拍摄，但也拍到了雪山、野生动物、寺庙等。</p>
        <div class="grid">
             {
                videos.map(video => (
                    <section style="width: 100%;margin-bottom:5rem">
                    <h3>{video.title}</h3>
                    <p>{video.description}</p>
                    <div style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; border-radius: 0.5rem;">
                        <iframe 
                        src={video.bilibiliUrl} 
                        allowfullscreen="true"
                        style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
                        >
                        </iframe>
                    </div>
                    </section>
                ))
             }
         </div>
        </main>
    <Footer/>
</body>
